# ============================================
# INSTANCE CONFIGURATION
# ============================================
# Unique prefix for this instance (used for container names & network)
CONTAINER_PREFIX=ghost

# Domain for this Ghost instance
DOMAIN=yourblog.com
GHOST_URL=https://yourblog.com

# Port for Ghost (each instance needs unique port)
# Example: ghost.edukra.id = 2368, indra.edukra.id = 2369
GHOST_PORT=2368

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_ROOT_PASSWORD=change_this_root_password
DB_GHOST_PASSWORD=change_this_ghost_password

# ============================================
# SMTP / EMAIL CONFIGURATION
# ============================================
MAIL_FROM="Ghost Blog <noreply@yourblog.com>"
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=postmaster@yourblog.com
SMTP_PASSWORD=your_smtp_password
